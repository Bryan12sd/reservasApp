<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <!-- Scroll para que se pueda desplazar si hay muchas reservas -->
    <ScrollView
        android:id="@+id/scrollReserva"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="24dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Contenedor de todas las reservas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Texto que aparece si no hay reservas -->
            <TextView
                android:id="@+id/textNoReservas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No tienes reservas registradas"
                android:textColor="@color/blue_gray"
                android:textSize="18sp"
                android:layout_marginTop="40dp"
                android:visibility="gone" />

            <!-- Aquí se agregan dinámicamente las tarjetas de reservas -->
            <LinearLayout
                android:id="@+id/containerReservas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
